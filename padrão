import telepot
from telepot.namedtuple import (ForceReply, InlineKeyboardButton,
                                InlineKeyboardMarkup, KeyboardButton,
                                ReplyKeyboardMarkup)

bot = telepot.Bot('667895949:AAFa5ic_yU0boRWKCh5EKe7vlE08fjAHQYM')
msg = bot.getUpdates()

def recebendoMsg(msg):
    mensagem = msg["text"]
    resp = "Oi!\n"
    if(mensagem):
        bot.sendMessage(620373334, resp)

bot.message_loop(recebendoMsg)

while True:
    texto = input()
    bot.sendMessage(620373334, texto)
